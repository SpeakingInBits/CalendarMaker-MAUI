<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarMaker_MAUI.Views.DesignerPage"
             Title="Designer">
    <Grid RowDefinitions="Auto,*" Padding="12" ColumnDefinitions="220,*" ColumnSpacing="12">
        <VerticalStackLayout Grid.Column="0" Spacing="10">
            <Label Text="Designer" FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="6">
                <Button Text="Prev" x:Name="PrevBtn" />
                <Label x:Name="MonthLabel" VerticalTextAlignment="Center" />
                <Button Text="Next" x:Name="NextBtn" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">
                <Label Text="Cover Page" VerticalTextAlignment="Center" />
                <Switch x:Name="CoverSwitch" />
            </HorizontalStackLayout>
            <Button Text="Add Photo" x:Name="AddPhotoBtn" />
            <Button Text="Add Cover Photo" x:Name="AddCoverPhotoBtn" />
            <Entry x:Name="TitleEntry" Placeholder="Cover Title" />
            <Entry x:Name="SubtitleEntry" Placeholder="Cover Subtitle" />
            <Button Text="Export Month (PDF)" x:Name="ExportBtn" Clicked="OnExportClicked" />
            <Button Text="Export Cover (PDF)" x:Name="ExportCoverBtn" Clicked="OnExportCoverClicked" />
            <Button Text="Export Full Year (PDF)" x:Name="ExportYearBtn" Clicked="OnExportYearClicked" />
            <Button Text="Back" x:Name="BackBtn" />
        </VerticalStackLayout>
        <Border Grid.Column="1" Stroke="LightGray" StrokeThickness="1" Padding="8">
            <ContentView x:Name="CanvasHost" />
        </Border>
    </Grid>
</ContentPage>