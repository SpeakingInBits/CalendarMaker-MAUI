<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarMaker_MAUI.Views.ProjectsPage"
             Title="Projects">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Button Text="New Project" x:Name="CreateBtn" />
        <CollectionView x:Name="ProjectsList" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8" Margin="0,6" Stroke="LightGray" StrokeThickness="1">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                <Label Text="{Binding Year}" />
                            </VerticalStackLayout>
                            <HorizontalStackLayout Grid.Column="1" Spacing="6">
                                <Button Text="Open" CommandParameter="{Binding .}" Clicked="OnOpenClicked" />
                                <Button Text="Delete" CommandParameter="{Binding .}" Clicked="OnDeleteClicked" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>